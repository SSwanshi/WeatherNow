<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WeatherNow | Modern Weather Forecasts</title>
    <link rel="stylesheet" href="main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <div class="logo-image"></div>
                <div class="logo-text">WeatherNow</div>
            </div>
        </nav>
    </header>

    <main>
        <section class="hero">
            <div class="hero-content">
                <h1 class="hero-title">Real-time Weather <span>At Your Fingertips</span></h1>
                <p class="hero-subtitle">Accurate forecasts and weather data from around the world</p>
                <div class="search-container">
                    <form action="/weather" method="get" class="weather-form">
                        <input type="text" name="city" placeholder="Enter city name" required>
                        <button type="submit">
                            <i class="fas fa-search"></i> Check Weather
                        </button>
                    </form>
                </div>
            </div>
        </section>

        <% if (error) { %>
            <div class="notification error-notification">
                <div class="notification-icon">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
                <div class="notification-content">
                    <p><%= error %></p>
                </div>
            </div>
        <% } %>

        <% if (weather) { %>
            <section class="weather-results">
                <div class="weather-card">
                    <div class="weather-header">
                        <h2><i class="fas fa-map-marker-alt"></i> <%= weather.name %>, <%= weather.sys.country %></h2>
                    </div>
                    <div class="weather-body">
                        <div class="weather-temp">
                            <span class="temp-value"><%= weather.main.temp %></span>
                            <span class="temp-unit">°C</span>
                        </div>
                        <div class="weather-condition">
                            <% if (weather.weather[0].main === "Haze") { %>
                                <i class="fas fa-smog"></i>
                            <% } else if (weather.weather[0].main === "Rain") { %>
                                <i class="fas fa-cloud-rain"></i>
                            <% } else if (weather.weather[0].main === "Mist") { %>
                                <i class="fas fa-cloud-fog"></i>
                            <% } else if (weather.weather[0].main === "Clouds") { %>
                                <i class="fas fa-cloud"></i>
                            <% } else if (weather.weather[0].main === "Clear") { %>
                                <i class="fas fa-sun"></i>
                            <% } else if (weather.weather[0].main === "Snow") { %>
                                <i class="fas fa-snowflake"></i>
                            <% } else { %>
                                <i class="fas fa-cloud"></i>
                            <% } %>
                            <span><%= weather.weather[0].main %></span>
                        </div>
                    </div>
                    <div class="weather-details">
                        <div class="detail">
                            <i class="fas fa-thermometer-half"></i>
                            <span>Feels like: <%= weather.main.feels_like %>°C</span>
                        </div>
                        <div class="detail">
                            <i class="fas fa-tint"></i>
                            <span>Humidity: <%= weather.main.humidity %>%</span>
                        </div>
                        <div class="detail">
                            <i class="fas fa-wind"></i>
                            <span>Wind: <%= weather.wind.speed %> m/s</span>
                        </div>
                    </div>
                </div>
            </section>
        <% } %>

        <section class="features">
            <div class="feature">
                <div class="feature-icon">
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <h3>Global Coverage</h3>
                <p>Weather data for any city around the world</p>
            </div>
            <div class="feature">
                <div class="feature-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3>Real-time Updates</h3>
                <p>Instant access to the most current weather information</p>
            </div>
            <div class="feature">
                <div class="feature-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h3>Responsive Design</h3>
                <p>Perfect view on any device, anywhere you go</p>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-logo">
                <div class="logo-image small"></div>
                <span>WeatherNow</span>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; Copyright © Sarvjeet Swanshi - 2024</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const hamburger = document.querySelector('.hamburger');
            const navLinks = document.querySelector('.nav-links');

            hamburger.addEventListener('click', function() {
                hamburger.classList.toggle('active');
                navLinks.classList.toggle('active');
            });
        });
    </script>
</body>
</html>